<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Top One Crypto Casino on Solana network."
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:fontFamily="@font/billabong" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solcasino.io"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="end"
        android:layout_marginEnd="45dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffff00"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:fontFamily="@font/roboto_black" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/wheel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/solwheel"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintVertical_bias="0.4"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/belt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/wheel"
        app:layout_constraintEnd_toEndOf="@id/wheel"
        app:layout_constraintTop_toTopOf="@id/wheel"
        app:layout_constraintBottom_toBottomOf="@id/wheel"
        android:src="@drawable/belt2"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.65"
        android:contentDescription="@string/app_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/actionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:padding="18dp"
            android:background="@drawable/bg"
            android:layout_margin="15dp">


            <Button
                android:id="@+id/withdrawBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clickHere"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/actionsLayout"
                android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="11dp"
                android:autoLink="all"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>